<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Escolha um numero entre 0 e 10!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoExibicao"
            android:textSize="18sp"
            app:fontFamily="sans-serif-light" android:textStyle="bold" android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Jogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="sortearNumero"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textoExibicao" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Nenhum numero selecionado."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoSorteio"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>